@page
@model ASM1.WebMVC.Pages.Product.VehicleModelsModel
@{
    ViewData["Title"] = "Vehicle Models";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-car"></i> Vehicle Models</h1>
        <a asp-page="/Product/CreateVehicleModel" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Model
        </a>
    </div>

    @if (!Model.Models.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No vehicle models found.
            <a asp-page="/Product/CreateVehicleModel">Create one now</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.Models)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-center py-5">
                                <i class="fas fa-car fa-3x text-white"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-industry"></i> @item.Manufacturer?.Name<br/>
                                    <i class="fas fa-tag"></i> @item.Category
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="/Product/VehicleModelDetail" asp-route-id="@item.VehicleModelId" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-page="/Product/CreateVehicleVariant" asp-route-modelId="@item.VehicleModelId" class="btn btn-sm btn-success">
                                <i class="fas fa-plus"></i> Add Variant
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

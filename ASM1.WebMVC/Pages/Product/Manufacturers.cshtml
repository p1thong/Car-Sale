@page
@model ASM1.WebMVC.Pages.Product.ManufacturersModel
@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-industry"></i> Manufacturers</h1>
        <a asp-page="/Product/CreateManufacturer" class="btn btn-success">
            <i class="fas fa-plus"></i> Add Manufacturer
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Manufacturers.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Address</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var manufacturer in Model.Manufacturers)
                    {
                        <tr>
                            <td>@manufacturer.ManufacturerId</td>
                            <td><strong>@manufacturer.Name</strong></td>
                            <td>@manufacturer.Country</td>
                            <td>@manufacturer.Address</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="/Product/EditManufacturer" asp-route-id="@manufacturer.ManufacturerId" 
                                       class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" 
                                            onclick="confirmDelete(@manufacturer.ManufacturerId, '@manufacturer.Name')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No manufacturers found.
            <a asp-page="/Product/CreateManufacturer" class="alert-link">Create one now</a>
        </div>
    }
</div>

<!-- Delete confirmation modal -->
<form id="deleteForm" method="post" asp-page-handler="Delete">
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete manufacturer "${name}"?\n\nThis will also delete all associated vehicle models and variants!`)) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

@page "{id:int}"
@model ASM1.WebMVC.Pages.Product.EditVehicleVariantModel
@{
    ViewData["Title"] = "Edit Vehicle Variant";
}

<div class="container py-4">
    <h1><i class="fas fa-edit"></i> Edit Vehicle Variant</h1>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="VariantId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="VehicleModelId" class="form-label">Vehicle Model</label>
                <select asp-for="VehicleModelId" asp-items="Model.VehicleModels" class="form-select">
                    <option value="">-- Select Model --</option>
                </select>
                <span asp-validation-for="VehicleModelId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Version" class="form-label">Version/Trim</label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Color" class="form-label">Color</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="ProductYear" class="form-label">Production Year</label>
                <input asp-for="ProductYear" type="number" class="form-control" />
                <span asp-validation-for="ProductYear" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-control" min="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price ($)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Variant
            </button>
            <a asp-page="/Product/VehicleVariantDetails" asp-route-id="@Model.VariantId" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

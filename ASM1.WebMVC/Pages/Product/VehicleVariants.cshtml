@page
@model ASM1.WebMVC.Pages.Product.VehicleVariantsModel
@{
    ViewData["Title"] = "Vehicle Variants";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-car-side"></i> Vehicle Variants</h1>
        <a asp-page="/Product/CreateVehicleVariant" class="btn btn-success">
            <i class="fas fa-plus"></i> Add Variant
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row align-items-end">
                    <div class="col-md-10">
                        <label class="form-label">Filter by Model</label>
                        <select name="modelId" class="form-select" onchange="this.form.submit()">
                            <option value="">-- All Models --</option>
                            @foreach (var item in Model.VehicleModels)
                            {
                                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <a asp-page="/Product/VehicleVariants" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-redo"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Variants.Any())
    {
        <div class="row">
            @foreach (var variant in Model.Variants)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @variant.ManufacturerName @variant.ModelName
                            </h5>
                            <h6 class="card-subtitle mb-3 text-muted">@variant.Version</h6>
                            
                            <div class="mb-2">
                                <strong>Color:</strong> 
                                <span class="badge bg-secondary">@variant.Color</span>
                            </div>
                            <div class="mb-2">
                                <strong>Year:</strong> @variant.ProductYear
                            </div>
                            <div class="mb-2">
                                <strong>Price:</strong> 
                                <span class="text-success fw-bold">$@variant.Price?.ToString("N2")</span>
                            </div>
                            <div class="mb-3">
                                <strong>Stock:</strong> 
                                <span class="badge @(variant.Quantity > 0 ? "bg-success" : "bg-danger")">
                                    @variant.Quantity units
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex gap-2">
                                <a asp-page="/Product/VehicleVariantDetails" asp-route-id="@variant.VariantId" 
                                   class="btn btn-sm btn-primary flex-fill">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a asp-page="/Product/EditVehicleVariant" asp-route-id="@variant.VariantId" 
                                   class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No variants found.
            <a asp-page="/Product/CreateVehicleVariant" class="alert-link">Create one now</a>
        </div>
    }
</div>

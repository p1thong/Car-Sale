@page
@model ASM1.WebMVC.Pages.CustomerOrder.CreateOrderModel
@{
    ViewData["Title"] = "Create Order";
}

<div class="container py-4">
    <h1><i class="fas fa-shopping-cart"></i> Đặt Hàng</h1>
    <hr />

    @if (Model.Variant != null && Model.CustomerData != null)
    {
        <div class="row">
            <!-- Vehicle Info -->
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Thông Tin Xe</h5>
                    </div>
                    <div class="card-body">
                        <h4>@Model.Variant.VehicleModel?.Manufacturer?.Name @Model.Variant.VehicleModel?.Name</h4>
                        <p class="mb-2"><strong>Version:</strong> @Model.Variant.Version</p>
                        <p class="mb-2"><strong>Color:</strong> <span class="badge bg-secondary">@Model.Variant.Color</span></p>
                        <p class="mb-2"><strong>Year:</strong> @Model.Variant.ProductYear</p>
                        <p class="mb-2"><strong>Price:</strong> <span class="text-success h5">$@Model.Variant.Price?.ToString("N2")</span></p>
                        <p class="mb-2"><strong>Available:</strong> <span class="badge bg-success">@Model.Variant.Quantity units</span></p>
                    </div>
                </div>
            </div>

            <!-- Customer Info & Order Form -->
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Thông Tin Đặt Hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6>Thông Tin Khách Hàng</h6>
                            <p class="mb-1"><strong>Tên:</strong> @Model.CustomerData.FullName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.CustomerData.Email</p>
                            <p class="mb-1"><strong>Phone:</strong> @Model.CustomerData.Phone</p>
                            <p class="mb-1"><strong>Dealer:</strong> @Model.CustomerData.Dealer?.FullName</p>
                        </div>

                        <hr />

                        <form method="post">
                            <input type="hidden" asp-for="VariantId" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Quantity" class="form-label">Số Lượng</label>
                                <input asp-for="Quantity" type="number" class="form-control" 
                                       min="1" max="@Model.MaxQuantity" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <small class="text-muted">Tối đa: @Model.MaxQuantity xe</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Ghi Chú (Optional)</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" 
                                          placeholder="Yêu cầu đặc biệt..."></textarea>
                            </div>

                            <div class="alert alert-info">
                                <strong>Tổng tiền:</strong> 
                                <span class="h5 text-success">$@(((Model.Variant.Price ?? 0) * Model.Quantity).ToString("N2"))</span>
                            </div>

                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-check"></i> Xác Nhận Đặt Hàng
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <a asp-page="/Home/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-calculate total when quantity changes
        document.querySelector('input[name="Quantity"]').addEventListener('input', function() {
            var price = @(Model.Variant?.Price ?? 0);
            var qty = parseInt(this.value) || 1;
            var total = (price * qty).toFixed(2);
            document.querySelector('.alert-info .h5').textContent = '$' + total.toLocaleString();
        });
    </script>
}

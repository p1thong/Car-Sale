@page
@model ASM1.WebMVC.Pages.Sales.OrdersModel
@{
    ViewData["Title"] = "Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-shopping-cart"></i> Orders</h1>
        <a asp-page="/Sales/CreateOrder" class="btn btn-success">
            <i class="fas fa-plus"></i> Create Order
        </a>
    </div>

    @if (Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Vehicle</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>@order.Customer?.FullName</td>
                            <td>
                                @order.Variant?.VehicleModel?.Manufacturer?.Name 
                                @order.Variant?.VehicleModel?.Name
                                <br />
                                <small class="text-muted">@order.Variant?.Version - @order.Variant?.Color</small>
                            </td>
                            <td>@(order.OrderDate.HasValue ? order.OrderDate.Value.ToString("dd'/'MM'/'yyyy") : "N/A")</td>
                            <td>
                                <span class="badge @(order.Status == "Completed" ? "bg-success" : order.Status == "Confirmed" ? "bg-info" : "bg-warning")">
                                    @order.Status
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="/Sales/OrderDetail" asp-route-id="@order.OrderId" 
                                       class="btn btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (order.Status == "Pending")
                                    {
                                        <a asp-page="/Sales/ConfirmOrder" asp-route-id="@order.OrderId" 
                                           class="btn btn-success">
                                            <i class="fas fa-check"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No orders found.
        </div>
    }
</div>

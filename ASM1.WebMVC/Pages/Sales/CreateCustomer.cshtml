@page
@model ASM1.WebMVC.Pages.Sales.CreateCustomerModel
@{
    ViewData["Title"] = "Tạo Khách Hàng Mới";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-plus text-success"></i> Tạo Khách Hàng Mới</h2>
        <a href="/Sales/Customers" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Thông Tin Khách Hàng</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Customer.FullName" class="form-label">Họ Và Tên <span class="text-danger">*</span></label>
                            <input asp-for="Customer.FullName" class="form-control" placeholder="Nhập họ tên đầy đủ" required />
                            <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Customer.Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Customer.Email" type="email" class="form-control" placeholder="example@email.com" required />
                            <span asp-validation-for="Customer.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Customer.Phone" class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                            <input asp-for="Customer.Phone" class="form-control" placeholder="0123456789" required />
                            <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Customer.Birthday" class="form-label">Ngày Sinh</label>
                            <input asp-for="Customer.Birthday" type="date" class="form-control" />
                            <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Tạo Khách Hàng
                            </button>
                            <a href="/Sales/Customers" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page "{id:int}"
@model ASM1.WebMVC.Pages.Sales.EditCustomerModel
@{
    ViewData["Title"] = "Chỉnh Sửa Khách Hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-edit text-warning"></i> Chỉnh Sửa Khách Hàng</h2>
        <a href="/Sales/Customers" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Customer == null)
    {
        <div class="alert alert-danger">Không tìm thấy khách hàng.</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="fas fa-user"></i> Thông Tin Khách Hàng</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Customer.CustomerId" />
                            <input type="hidden" asp-for="Customer.DealerId" />

                            <div class="mb-3">
                                <label asp-for="Customer.FullName" class="form-label">Họ Và Tên <span class="text-danger">*</span></label>
                                <input asp-for="Customer.FullName" class="form-control" required />
                                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Customer.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Customer.Email" type="email" class="form-control" required />
                                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Customer.Phone" class="form-label">Số Điện Thoại <span class="text-danger">*</span></label>
                                <input asp-for="Customer.Phone" class="form-control" required />
                                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Customer.Birthday" class="form-label">Ngày Sinh</label>
                                <input asp-for="Customer.Birthday" type="date" class="form-control" />
                                <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-lg text-white">
                                    <i class="fas fa-save"></i> Cập Nhật
                                </button>
                                <a href="/Sales/Customers" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

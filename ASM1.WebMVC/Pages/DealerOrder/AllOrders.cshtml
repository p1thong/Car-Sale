@page
@model ASM1.WebMVC.Pages.DealerOrder.AllOrdersModel
@{
    ViewData["Title"] = "Tất Cả Đơn Hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list-alt text-primary"></i> Tất Cả Đơn Hàng</h2>
        <a href="/DealerOrder/PendingOrders" class="btn btn-warning">
            <i class="fas fa-clock"></i> Đơn Chờ Xác Nhận
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Chưa có đơn hàng nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách Hàng</th>
                        <th>Xe</th>
                        <th>Ngày Đặt</th>
                        <th>SL</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
					@foreach (var order in Model.Orders.OrderByDescending(o => o.OrderId))
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>
                                @order.Customer?.FullName<br>
                                <small class="text-muted">@order.Customer?.Email</small>
                            </td>
                            <td>
                                @order.Variant?.VehicleModel?.Name<br>
                                <small class="text-muted">@order.Variant?.Version - @order.Variant?.Color</small>
                            </td>
                            <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge bg-primary">@order.Quantity</span></td>
                            <td><strong class="text-success">@order.TotalPrice?.ToString("N0") $</strong></td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Chờ Xác Nhận</span>
                                }
                                else if (order.Status == "Confirmed")
                                {
                                    <span class="badge bg-info">Đã Xác Nhận</span>
                                }
                                else if (order.Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn Thành</span>
                                }
                                else if (order.Status == "Cancelled" || order.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                                else
                                {
									<span class="badge bg-secondary">Đã hủy</span>
                                }
                            </td>
                            <td>
                                <a href="/DealerOrder/OrderDetail/@order.OrderId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Chi Tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
}

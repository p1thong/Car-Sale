@page
@model ASM1.WebMVC.Pages.DealerOrder.PendingOrdersModel
@{
    ViewData["Title"] = "Đơn Hàng Chờ Xác Nhận";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock text-warning"></i> Đơn Hàng Chờ Xác Nhận</h2>
        <a href="/DealerOrder/AllOrders" class="btn btn-outline-primary">
            <i class="fas fa-list"></i> Tất Cả Đơn Hàng
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Không có đơn hàng nào chờ xác nhận.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách Hàng</th>
                        <th>Xe</th>
                        <th>Ngày Đặt</th>
                        <th>Giá Trị</th>
                        <th>Trạng Thái</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
					@foreach (var order in Model.Orders.OrderByDescending(o => o.OrderId))
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>
                                @order.CustomerName<br>
                                <small class="text-muted">@order.CustomerEmail</small>
                            </td>
                            <td>
                                @order.ModelName<br>
                                <small class="text-muted">@order.VariantVersion</small>
                            </td>
                            <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                            <td><strong>@order.Price?.ToString("N0") $</strong></td>
                            <td>
                                <span class="badge bg-warning">@order.Status</span>
                            </td>
                            <td>
                                <a href="/DealerOrder/OrderDetail/@order.OrderId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Chi Tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

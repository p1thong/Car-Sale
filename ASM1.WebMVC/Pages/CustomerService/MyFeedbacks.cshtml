@page
@model ASM1.WebMVC.Pages.CustomerService.MyFeedbacksModel
@{
    ViewData["Title"] = "My Feedbacks";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-comments"></i> Phản Hồi Của Tôi</h1>
        <a asp-page="/CustomerService/CreateFeedback" class="btn btn-success">
            <i class="fas fa-plus"></i> Tạo Phản Hồi
        </a>
    </div>

    @if (Model.Feedbacks.Any())
    {
        <div class="row">
            @foreach (var feedback in Model.Feedbacks)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star@(i <= feedback.Rating ? "" : "-o")"></i>
                                    }
                                </span>
                                <small class="text-muted">@(feedback.FeedbackDate.HasValue ? feedback.FeedbackDate.Value.ToString("dd'/'MM'/'yyyy") : "N/A")</small>
                            </div>
                            <p class="card-text">@feedback.Content</p>
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> Feedback ID: @feedback.FeedbackId
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Bạn chưa có phản hồi nào.
        </div>
    }
</div>

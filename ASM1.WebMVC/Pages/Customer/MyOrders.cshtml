@page
@model ASM1.WebMVC.Pages.Customer.MyOrdersModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list-alt text-primary me-2"></i>
            Đơn hàng của tôi
        </h2>
        <a asp-page="/Home/Index" class="btn btn-outline-primary">
            <i class="fas fa-plus me-2"></i>
            Đặt thêm xe
        </a>
    </div>

    @if (Model.Orders.Any())
    {
        <!-- Thống kê nhanh -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-clock me-2"></i>Chờ xác nhận</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Pending")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-check me-2"></i>Đã xác nhận</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Confirmed")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-flag-checkered me-2"></i>Hoàn thành</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Completed")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-times me-2"></i>Đã từ chối</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Rejected")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách đơn hàng -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>
                    Danh sách đơn hàng (@Model.Orders.Count() đơn)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Xe</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                          @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderId))
                            {
                                <tr>
                                    <td><strong class="text-primary">#@order.OrderId</strong></td>
                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(order.Variant?.VehicleModel?.ImageUrl))
                                            {
                                                <img src="@order.Variant.VehicleModel.ImageUrl" 
                                                     alt="@order.Variant.VehicleModel.ModelName" 
                                                     class="me-3 rounded" 
                                                     style="width: 60px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="me-3 bg-light d-flex align-items-center justify-content-center rounded" 
                                                     style="width: 60px; height: 40px;">
                                                    <i class="fas fa-car text-muted"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@order.Variant?.VehicleModel?.ModelName</div>
                                                <small class="text-muted">
                                                    @order.Variant?.VehicleModel?.Manufacturer?.Name - 
                                                    @order.Variant?.Version (@order.Variant?.Color)
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary fs-6">@order.Quantity</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">
                                            @(order.TotalPrice?.ToString("C0", new System.Globalization.CultureInfo("en-US")) ?? 
                                              (order.Variant?.Price * order.Quantity)?.ToString("C0", new System.Globalization.CultureInfo("en-US")))
                                        </span>
                                    </td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning"><i class="fas fa-clock me-1"></i>Chờ xác nhận</span>
                                                break;
                                            case "Confirmed":
                                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>Đã xác nhận</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Đã từ chối</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-info"><i class="fas fa-flag-checkered me-1"></i>Hoàn thành</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@order.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="/Customer/OrderDetail" asp-route-id="@order.OrderId"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>
                                            @if (order.Status == "Pending")
                                            {
                                                <button type="button" 
                                                        class="btn btn-outline-danger btn-sm"
                                                        onclick="cancelOrder(@order.OrderId)">
                                                    <i class="fas fa-times"></i> Hủy đơn
                                                </button>
                                            }
                                            @if (order.Status == "Confirmed")
                                            {
                                                var totalPaid = order.Payments?.Sum(p => p.Amount ?? 0) ?? 0;
                                                var orderTotal = order.Variant?.Price ?? 0;
                                                var isFullyPaid = totalPaid >= orderTotal;
                                                
                                                if (!isFullyPaid)
                                                {
                                                    <a asp-page="/CustomerOrder/Payment" asp-route-orderId="@order.OrderId"
                                                       class="btn btn-success btn-sm">
                                                        <i class="fas fa-credit-card"></i> Thanh toán
                                                    </a>
                                                }
                                            }
                                            @if (order.Status == "Completed" && order.Payments?.Any() == true)
                                            {
                                                var hasDelivering = order.Payments.Any(p => p.Status == "Delivering");
                                                var hasDelivered = order.Payments.Any(p => p.Status == "Delivered");
                                                var hasReceived = order.Payments.Any(p => p.Status == "Received");
                                                var allReceived = order.Payments.All(p => p.Status == "Received");
                                                
                                                if (allReceived)
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-handshake me-1"></i>Đã nhận
                                                    </span>
                                                }
                                                else if (hasDelivered)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-check-circle me-1"></i>Đã giao
                                                    </span>
                                                }
                                                else if (hasDelivering)
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-truck me-1"></i>Đang giao
                                                    </span>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có đơn hàng nào</h4>
                <p class="text-muted mb-4">Bạn chưa đặt mua xe nào. Hãy khám phá và chọn xe phù hợp với bạn!</p>
                <a asp-page="/Home/Index" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>
                    Khám phá xe ngay
                </a>
            </div>
        </div>
    }
</div>

<!-- Hidden form for cancel order -->
<form id="cancelOrderForm" method="post" style="display: none;">
    <input type="hidden" name="orderId" id="cancelOrderId" />
    <input type="hidden" name="handler" value="CancelOrder" />
</form>

<script>
function cancelOrder(orderId) {
    if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này? Hành động này không thể hoàn tác.')) {
        document.getElementById('cancelOrderId').value = orderId;
        document.getElementById('cancelOrderForm').submit();
    }
}
</script>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
}
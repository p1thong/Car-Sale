@page
@model ASM1.WebMVC.Pages.Customer.MyOrdersModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list-alt text-primary me-2"></i>
            Đơn hàng của tôi
        </h2>
        <a asp-page="/Home/Index" class="btn btn-outline-primary">
            <i class="fas fa-plus me-2"></i>
            Đặt thêm xe
        </a>
    </div>

    @if (Model.Orders.Any())
    {
        <!-- Thống kê nhanh -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-clock me-2"></i>Chờ xác nhận</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Pending")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-check me-2"></i>Đã xác nhận</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Confirmed")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-flag-checkered me-2"></i>Hoàn thành</h5>
                        <h3>@Model.Orders.Count(o => o.Status == "Completed")</h3>
                    </div>
                </div>
            </div>
				<div class="col-md-3">
					<div class="card bg-secondary text-white">
						<div class="card-body text-center">
							<h5><i class="fas fa-ban me-2"></i>Đã hủy</h5>
							<h3>@Model.Orders.Count(o => o.Status == "Cancelled" || o.Status == "Rejected")</h3>
						</div>
					</div>
				</div>
		  </div>

        <!-- Danh sách đơn hàng -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>
                    Danh sách đơn hàng (@Model.Orders.Count() đơn)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Xe</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thanh toán</th>
                                <th>Giao hàng</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                          @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderId))
                            {
                                <tr>
                                    <td><strong class="text-primary">#@order.OrderId</strong></td>
                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(order.ImageUrl))
                                            {
                                                <img src="@order.ImageUrl" 
                                                     alt="@order.ModelName" 
                                                     class="me-3 rounded" 
                                                     style="width: 60px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="me-3 bg-light d-flex align-items-center justify-content-center rounded" 
                                                     style="width: 60px; height: 40px;">
                                                    <i class="fas fa-car text-muted"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@order.ModelName</div>
                                                <small class="text-muted">
                                                    @order.ManufacturerName - 
                                                    @order.VariantVersion (@order.VariantColor)
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary fs-6">@order.Quantity</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">
                                            @(order.TotalPrice?.ToString("C0", new System.Globalization.CultureInfo("en-US")) ?? 
                                              (order.Price * order.Quantity)?.ToString("C0", new System.Globalization.CultureInfo("en-US")))
                                        </span>
                                    </td>
                                    <td>
									@switch (order.Status)
									{
										case "Pending":
											<span class="badge bg-warning"><i class="fas fa-clock me-1"></i>Chờ xác nhận</span>
											break;
										case "Confirmed":
											<span class="badge bg-success"><i class="fas fa-check me-1"></i>Đã xác nhận</span>
											break;
										case "Rejected":
										case "Cancelled":
											<span class="badge bg-secondary"><i class="fas fa-ban me-1"></i>Đã hủy</span>
											break;
										case "Completed":
											<span class="badge bg-info"><i class="fas fa-flag-checkered me-1"></i>Hoàn thành</span>
											break;
										default:
											<span class="badge bg-secondary">@order.Status</span>
											break;
									}
                                    </td>
                                    <td>
                                        @if (order.IsFullyPaid)
                                        {
                                            <span class="badge bg-success">Đã thanh toán</span>
                                        }
                                        else if (order.TotalPaid > 0)
                                        {
                                            <span class="badge bg-warning text-dark">Đã cọc</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Chưa thanh toán</span>
                                        }
                                    </td>
                                    <td>
                                        @if (order.Status == "Completed" || order.Status == "Paid")
                                        {
                                            var deliveryStatus = order.Payments?.FirstOrDefault(p => p.Status != "Completed")?.Status;
                                            @switch (deliveryStatus)
                                            {
                                                case "Delivering":
                                                    <span class="badge bg-warning text-dark">Đang giao</span>
                                                    break;
                                                case "Delivered":
                                                    <span class="badge bg-info">Đã giao</span>
                                                    break;
                                                case "Received":
                                                    <span class="badge bg-success">Đã nhận</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Chờ giao</span>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a href="/Customer/OrderDetail/@order.OrderId" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-eye me-1"></i> Xem
                                            </a>
                                            @if (!order.IsFullyPaid && order.Status == "Confirmed")
                                            {
                                                <a href="/CustomerOrder/Payment/@order.OrderId" class="btn btn-sm btn-success">
                                                    <i class="fas fa-credit-card me-1"></i> Thanh toán
                                                </a>
                                            }
                                            @if (order.Status == "Pending")
                                            {
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-sm"
                                                        onclick="cancelOrder(@order.OrderId)">
                                                    <i class="fas fa-times"></i> Hủy đơn
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có đơn hàng nào</h4>
                <p class="text-muted mb-4">Bạn chưa đặt mua xe nào. Hãy khám phá và chọn xe phù hợp với bạn!</p>
                <a asp-page="/Home/Index" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>
                    Khám phá xe ngay
                </a>
            </div>
        </div>
    }
</div>

<!-- Hidden form for cancel order -->
<form id="cancelOrderForm" method="post" asp-page-handler="CancelOrder" style="display: none;">
    <input type="hidden" name="orderId" id="cancelOrderId" />
</form>


<script>
function cancelOrder(orderId) {
    if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này? Hành động này không thể hoàn tác.')) {
        document.getElementById('cancelOrderId').value = orderId;
        document.getElementById('cancelOrderForm').submit();
    }
}
</script>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
}

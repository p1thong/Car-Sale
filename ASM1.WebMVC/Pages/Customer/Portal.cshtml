@page
@model ASM1.WebMVC.Pages.Customer.PortalModel
@{
    ViewData["Title"] = "Customer Portal";
}

<div class="container py-4">
    <h1><i class="fas fa-user-circle"></i> Customer Portal</h1>
    <hr />

    @if (Model.CustomerData != null)
    {
        <!-- Customer Info Card -->
        <div class="card mb-4 shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Welcome, @Model.CustomerData.FullName!</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Email:</strong> @Model.CustomerData.Email</p>
                        <p><strong>Phone:</strong> @Model.CustomerData.Phone</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Dealer:</strong> @Model.CustomerData.Dealer?.FullName</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </h5>
                        <h2 class="mb-0">@Model.OrdersCount</h2>
                        <p class="text-muted">Total Orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">
                            <i class="fas fa-clock fa-2x"></i>
                        </h5>
                        <h2 class="mb-0">@Model.PendingOrdersCount</h2>
                        <p class="text-muted">Pending</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-info">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </h5>
                        <h2 class="mb-0">@Model.ConfirmedOrdersCount</h2>
                        <p class="text-muted">Confirmed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="fas fa-check-double fa-2x"></i>
                        </h5>
                        <h2 class="mb-0">@Model.CompletedOrdersCount</h2>
                        <p class="text-muted">Completed</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-list fa-3x text-primary mb-3"></i>
                        <h5>My Orders</h5>
                        <p class="text-muted">View and manage your orders</p>
                        <a asp-page="/Customer/MyOrders" class="btn btn-primary">
                            View Orders <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                        <h5>Test Drives</h5>
                        <p class="text-muted">Schedule and manage test drives</p>
                        <a asp-page="/CustomerService/MyTestDrives" class="btn btn-success">
                            View Test Drives <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-comment fa-3x text-info mb-3"></i>
                        <h5>Feedbacks</h5>
                        <p class="text-muted">View and submit feedback</p>
                        <a asp-page="/CustomerService/MyFeedbacks" class="btn btn-info">
                            View Feedbacks <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
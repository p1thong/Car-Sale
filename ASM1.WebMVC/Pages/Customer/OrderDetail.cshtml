@page "{id:int}"
@model ASM1.WebMVC.Pages.Customer.OrderDetailModel
@{
    ViewData["Title"] = "Order Details #" + Model.Order?.OrderId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice text-primary"></i> Order Details #@Model.Order?.OrderId</h2>
        <a href="/Customer/MyOrders" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to My Orders
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Order == null)
    {
        <div class="alert alert-danger">Order not found.</div>
    }
    else
    {
        <div class="row">
            <!-- Order Info -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Order Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Order ID:</strong> #@Model.Order.OrderId</p>
                        <p><strong>Order Date:</strong> @Model.Order.OrderDate?.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>
                        <p><strong>Status:</strong> 
                            @if (Model.Order.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (Model.Order.Status == "Confirmed")
                            {
                                <span class="badge bg-info">Confirmed</span>
                            }
                            else if (Model.Order.Status == "Paid")
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else if (Model.Order.Status == "Completed")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Order.Status</span>
                            }
                        </p>
                        <p><strong>Dealer:</strong> @Model.Order.Dealer?.FullName</p>
                    </div>
                </div>
            </div>

            <!-- Vehicle Info -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-car"></i> Vehicle Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Order.Variant?.VehicleModel?.ImageUrl))
                            {
                                <img src="@Model.Order.Variant.VehicleModel.ImageUrl" 
                                     alt="@Model.Order.Variant.VehicleModel.Name" 
                                     class="img-fluid rounded" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="bg-light p-4 rounded">
                                    <i class="fas fa-car fa-3x text-muted"></i>
                                    <p class="text-muted mt-2">No image available</p>
                                </div>
                            }
                        </div>
                        <p><strong>Vehicle:</strong> @Model.Order.Variant?.VehicleModel?.Name</p>
                        <p><strong>Version:</strong> @Model.Order.Variant?.Version</p>
                        <p><strong>Color:</strong> @Model.Order.Variant?.Color</p>
                        <p><strong>Year:</strong> @Model.Order.Variant?.ProductYear</p>
                        <p><strong>Price:</strong> <span class="text-success fw-bold fs-4">$@Model.Order.Variant?.Price?.ToString("N0") VND</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-calculator"></i> Payment Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6>Order Total</h6>
                                <h4 class="text-primary">$@Model.OrderTotal.ToString("N0") VND</h4>
                            </div>
                            <div class="col-md-4">
                                <h6>Amount Paid</h6>
                                <h4 class="text-success">$@Model.TotalPaid.ToString("N0") VND</h4>
                            </div>
                            <div class="col-md-4">
                                <h6>Remaining Balance</h6>
                                <h4 class="text-danger">$@Model.RemainingBalance.ToString("N0") VND</h4>
                            </div>
                        </div>
                        
                        @if (Model.RemainingBalance > 0 && (Model.Order.Status == "Confirmed" || Model.Order.Status == "Pending"))
                        {
                            <div class="text-center mt-3">
                                <a asp-page="/Customer/PaymentOptions" asp-route-orderId="@Model.Order.OrderId" 
                                   class="btn btn-success btn-lg">
                                    <i class="fas fa-credit-card"></i> Make Payment
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment History -->
        @if (Model.Payments.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-history"></i> Payment History</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Payment ID</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Method</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in Model.Payments)
                                        {
                                            <tr>
                                                <td>#@payment.PaymentId</td>
                                                <td>@payment.PaymentDate?.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                                <td>$@payment.Amount?.ToString("N0") VND</td>
                                                <td>@payment.PaymentMethod</td>
                                                <td><span class="badge bg-success">@(payment.Status ?? "Completed")</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
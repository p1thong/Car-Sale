@page "{id:int}"
@model ASM1.WebMVC.Pages.Customer.OrderDetailModel
@{
    ViewData["Title"] = "Order Details #" + Model.Order?.OrderId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice text-primary"></i> Order Details #@Model.Order?.OrderId</h2>
        <a href="/Customer/MyOrders" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to My Orders
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Order == null)
    {
        <div class="alert alert-danger">Order not found.</div>
    }
    else
    {
        <div class="row">
            <!-- Order Info -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Order Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Order ID:</strong> #@Model.Order.OrderId</p>
                        <p><strong>Order Date:</strong> @Model.Order.OrderDate?.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>
                        <p><strong>Status:</strong> 
                            @if (Model.Order.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (Model.Order.Status == "Confirmed")
                            {
                                <span class="badge bg-info">Confirmed</span>
                            }
                            else if (Model.Order.Status == "Paid")
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else if (Model.Order.Status == "Completed")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Order.Status</span>
                            }
                        </p>
                        <p><strong>Dealer:</strong> @Model.Order.Dealer?.FullName</p>
                    </div>
                </div>
            </div>

            <!-- Vehicle Info -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-car"></i> Vehicle Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Order.Variant?.VehicleModel?.ImageUrl))
                            {
                                <img src="@Model.Order.Variant.VehicleModel.ImageUrl" 
                                     alt="@Model.Order.Variant.VehicleModel.Name" 
                                     class="img-fluid rounded" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="bg-light p-4 rounded">
                                    <i class="fas fa-car fa-3x text-muted"></i>
                                    <p class="text-muted mt-2">No image available</p>
                                </div>
                            }
                        </div>
                        <p><strong>Vehicle:</strong> @Model.Order.Variant?.VehicleModel?.Name</p>
                        <p><strong>Version:</strong> @Model.Order.Variant?.Version</p>
                        <p><strong>Color:</strong> @Model.Order.Variant?.Color</p>
                        <p><strong>Year:</strong> @Model.Order.Variant?.ProductYear</p>
                        <p><strong>Price:</strong> <span class="text-success fw-bold fs-4">$@Model.Order.Variant?.Price?.ToString("N0") $</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-calculator"></i> Payment Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6>Order Total</h6>
                                <h4 class="text-primary">$@Model.OrderTotal.ToString("N0") $</h4>
                            </div>
                            <div class="col-md-4">
                                <h6>Amount Paid</h6>
                                <h4 class="text-success">$@Model.TotalPaid.ToString("N0") $</h4>
                            </div>
                            <div class="col-md-4">
                                <h6>Remaining Balance</h6>
                                <h4 class="text-danger">$@Model.RemainingBalance.ToString("N0") $</h4>
                            </div>
                        </div>
                        
                        @if (Model.RemainingBalance > 0 && (Model.Order.Status == "Confirmed"))
                        {
                            <div class="text-center mt-3">
                                <a asp-page="/CustomerOrder/Payment" asp-route-orderId="@Model.Order.OrderId" 
                                   class="btn btn-success btn-lg">
                                    <i class="fas fa-credit-card"></i> Make Payment
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Delivery Status -->
        @if (Model.Order.Status == "Completed" && Model.Payments.Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-shipping-fast"></i> Trạng thái giao hàng</h5>
                        </div>
                        <div class="card-body">
                            @{
                                var hasDelivering = Model.Payments.Any(p => p.Status == "Delivering");
                                var hasDelivered = Model.Payments.Any(p => p.Status == "Delivered");
                                var hasReceived = Model.Payments.Any(p => p.Status == "Received");
                                var allDelivered = Model.Payments.All(p => p.Status == "Delivered" || p.Status == "Received");
                                var allReceived = Model.Payments.All(p => p.Status == "Received");
                            }
                            
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="delivery-step @(Model.RemainingBalance <= 0 ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-check-circle @(Model.RemainingBalance <= 0 ? "text-success" : "text-muted")"></i>
                                        </div>
                                        <h6>Thanh toán hoàn tất</h6>
                                        <small class="text-muted">Đã thanh toán đủ số tiền</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="delivery-step @(hasDelivering ? "active" : (hasDelivered || hasReceived ? "completed" : ""))">
                                        <div class="step-icon">
                                            <i class="fas fa-truck @(hasDelivering ? "text-warning" : (hasDelivered || hasReceived ? "text-success" : "text-muted"))"></i>
                                        </div>
                                        <h6>Đang giao hàng</h6>
                                        <small class="text-muted">Xe đang được vận chuyển</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="delivery-step @(hasDelivered && !hasReceived ? "active" : (hasReceived ? "completed" : ""))">
                                        <div class="step-icon">
                                            <i class="fas fa-home @(hasDelivered && !hasReceived ? "text-warning" : (hasReceived ? "text-success" : "text-muted"))"></i>
                                        </div>
                                        <h6>Đã giao</h6>
                                        <small class="text-muted">Xe đã được giao đến</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="delivery-step @(allReceived ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-handshake @(allReceived ? "text-success" : "text-muted")"></i>
                                        </div>
                                        <h6>Đã nhận</h6>
                                        <small class="text-muted">Khách hàng đã nhận xe</small>
                                    </div>
                                </div>
                            </div>

                            @if (allReceived)
                            {
                                <div class="alert alert-success mt-3 text-center">
                                    <i class="fas fa-trophy me-2"></i>
                                    <strong>Chúc mừng!</strong> Bạn đã nhận xe thành công! Cảm ơn bạn đã tin tưởng và sử dụng dịch vụ của chúng tôi!
                                </div>
                            }
                            else if (hasDelivered && !hasReceived)
                            {
                                <div class="alert alert-info mt-3 text-center">
                                    <i class="fas fa-handshake me-2"></i>
                                    Xe đã được giao đến bạn. Vui lòng xác nhận đã nhận xe để hoàn tất đơn hàng.
                                </div>
                                <div class="text-center mt-3">
                                    <form method="post" asp-page-handler="ConfirmReceived" class="d-inline">
                                        <input type="hidden" name="orderId" value="@Model.Order.OrderId" />
                                        <button type="submit" class="btn btn-success btn-lg">
                                            <i class="fas fa-handshake me-2"></i>Xác nhận đã nhận xe
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (hasDelivering)
                            {
                                <div class="alert alert-warning mt-3 text-center">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Xe của bạn đang được vận chuyển. Vui lòng kiểm tra thông tin giao hàng và chuẩn bị nhận xe.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Payment History -->
        @if (Model.Payments.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-history"></i> Payment History</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Payment ID</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Method</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in Model.Payments)
                                        {
                                            <tr>
                                                <td>#@payment.PaymentId</td>
                                                <td>@payment.PaymentDate?.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                                <td>$@payment.Amount?.ToString("N0") $</td>
                                                <td>@payment.PaymentMethod</td>
                                                <td>
                                                    @{
                                                        var status = payment.Status ?? "Completed";
                                                    }
                                                    @switch (status)
                                                    {
                                                        case "Completed":
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check me-1"></i>Thành công
                                                            </span>
                                                            break;
                                                        case "Delivering":
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-truck me-1"></i>Đang giao
                                                            </span>
                                                            break;
                                                        case "Delivered":
                                                            <span class="badge bg-info">
                                                                <i class="fas fa-check-circle me-1"></i>Đã giao
                                                            </span>
                                                            break;
                                                        case "Received":
                                                            <span class="badge bg-primary">
                                                                <i class="fas fa-handshake me-1"></i>Đã nhận
                                                            </span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@status</span>
                                                            break;
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .delivery-step {
        padding: 20px;
        text-align: center;
        position: relative;
    }

    .delivery-step .step-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .delivery-step.completed .step-icon i {
        color: #28a745 !important;
    }

    .delivery-step.active .step-icon i {
        color: #ffc107 !important;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    .delivery-step h6 {
        margin-top: 10px;
        font-weight: bold;
    }

    .delivery-step.completed h6 {
        color: #28a745;
    }

    .delivery-step.active h6 {
        color: #ffc107;
    }
</style>
